# 서버 설정
PORT=3000
NODE_ENV=development

# 데이터베이스 설정
DB_TYPE=sqlite               # sqlite, mongodb, postgres, mysql 중 선택
SQLITE_PATH=data/database.sqlite  # SQLite 데이터베이스 파일 경로

# MongoDB 설정 (MongoDB 사용 시)
MONGODB_URI=mongodb://localhost:27017/auth-api

# JWT 설정
JWT_SECRET=your-secret-key-here
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# 이메일 설정
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=user@example.com
EMAIL_PASSWORD=your-email-password
EMAIL_FROM=noreply@example.com

# OAuth 설정
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/api/v1/oauth/google/callback

# 보안 설정
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# 로깅 설정
LOG_LEVEL=info

# 2FA 설정
OTP_ISSUER=YourCompany